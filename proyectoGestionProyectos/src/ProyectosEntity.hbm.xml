<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.ainara.ProyectosEntity" table="proyectos" schema="gestionProyectos">
        <id name="idProyecto">
            <column name="id_proyecto" sql-type="int unsigned"/>
        </id>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(40)" length="40"/>
        </property>
        <property name="ciudad">
            <column name="ciudad" sql-type="varchar(30)" length="30"/>
        </property>
    </class>
</hibernate-mapping>
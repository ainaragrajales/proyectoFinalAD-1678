<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.ainara.PiezasEntity" table="piezas" schema="gestionProyectos">
        <id name="idPieza">
            <column name="id_pieza" sql-type="int unsigned"/>
        </id>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(40)" length="40"/>
        </property>
        <property name="precio">
            <column name="precio" sql-type="double" precision="-1"/>
        </property>
        <property name="descripcion">
            <column name="descripcion" sql-type="varchar(100)" length="100"/>
        </property>
    </class>
</hibernate-mapping>